<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360">
    <shape
        android:shape="ring"
        android:useLevel="true">
        <size
            android:width="48dp"
            android:height="48dp"/>
        <gradient
            android:type="sweep"
            android:useLevel="false"
            android:startColor="@color/color_Primary"
            android:centerColor="@color/colorPrimaryOrange"
            android:endColor="@color/Orrange_400"
            android:angle="0"/>
    </shape>
</rotate>
