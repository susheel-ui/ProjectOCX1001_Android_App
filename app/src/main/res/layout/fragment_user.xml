<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:paddingStart="26dp"
        android:paddingEnd="26dp">

        <!-- Back arrow and title container (optional, add if you want toolbar) -->
        <!-- You can add a Toolbar or simple header here -->

        <!-- Profile Image with camera icon -->
        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                android:background="@drawable/circle_background"
                android:contentDescription="Profile Image"
                android:clipToOutline="true"
                android:outlineProvider="background" />

            <ImageButton
                android:id="@+id/cameraButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:backgroundTint="#E8B14E"
                android:background="@drawable/circle_background_yellow"
                android:padding="8dp"
                android:contentDescription="Change Profile Picture"
                android:elevation="4dp" />

        </FrameLayout>

        <!-- User Name -->

        <!-- First Name and Last Name in a single row -->
<!--        <LinearLayout-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal"-->
<!--            android:layout_marginTop="12dp">-->

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#1C1C1C"
                android:textSize="22sp"
                android:textStyle="bold" />

<!--            <TextView-->
<!--                android:id="@+id/lastNameValue"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Morgan"-->
<!--                android:textColor="#1C1C1C"-->
<!--                android:textSize="22sp"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginStart="8dp" /> &lt;!&ndash; spacing between first and last name &ndash;&gt;-->

<!--        </LinearLayout>-->




        <!-- Section: Personal Details -->
        <TextView
            android:id="@+id/personalDetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:textSize="16sp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:paddingBottom="8dp" />

        <!-- First Name Field -->
        <LinearLayout
            android:id="@+id/firstNameLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_card_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account_user" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIRST NAME"
                    android:textColor="#B0B0B0"
                    android:textSize="10sp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/firstNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#1C1C1C"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>


        </LinearLayout>

        <!-- Last Name Field -->
        <LinearLayout
            android:id="@+id/lastNameLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_card_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account_user" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAST NAME"
                    android:textColor="#B0B0B0"
                    android:textSize="10sp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/lastNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textColor="#1C1C1C"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>


        </LinearLayout>

        <!-- Section: Contact Information -->
        <TextView
            android:id="@+id/contactInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:textSize="16sp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Email Field -->
        <LinearLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_card_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mail" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL ADDRESS"
                    android:textColor="#B0B0B0"
                    android:textSize="10sp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zarkit@email.com"
                    android:textColor="#1C1C1C"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>


        </LinearLayout>

        <!-- Mobile Number Field -->
        <LinearLayout
            android:id="@+id/mobileLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_card_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOBILE NUMBER"
                    android:textColor="#B0B0B0"
                    android:textSize="10sp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/mobileText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1 (555) 000-0000"
                    android:textColor="#1C1C1C"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>



        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/primary_varient1"
            android:drawablePadding="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|center_horizontal"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- App Version Text -->
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Version 2.4.0 (Build 120)"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
