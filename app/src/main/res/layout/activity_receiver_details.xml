<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="10dp"/>

    <!-- RESPONSIVE MAP -->
    <fragment
        android:id="@+id/miniMapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addressCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CENTER PIN -->
    <ImageView
        android:id="@+id/centerPin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_location_on_red"
        app:layout_constraintTop_toTopOf="@id/miniMapFragment"
        app:layout_constraintBottom_toBottomOf="@id/miniMapFragment"
        app:layout_constraintStart_toStartOf="@id/miniMapFragment"
        app:layout_constraintEnd_toEndOf="@id/miniMapFragment"/>

    <!-- ADDRESS CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/addressCard"
        android:layout_width="365dp"
        android:layout_height="365dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/confirmButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/miniMapFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- SHORT ADDRESS ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location_on_red" />

                    <TextView
                        android:id="@+id/addressShort"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="Azadpur"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- âœ… CHANGE BUTTON (ADDED) -->
                    <Button
                        android:id="@+id/changeAddressButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:backgroundTint="@android:color/white"
                        android:text="Change"
                        android:textColor="#1A73E8"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- FULL ADDRESS -->
                <TextView
                    android:id="@+id/addressLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Azadpur, Delhi, India"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <!-- HOUSE -->
                <EditText
                    android:id="@+id/houseEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/edittext_border"
                    android:hint="Drop : House / Apartment / Shop"
                    android:padding="12dp" />

                <!-- NAME -->
                <EditText
                    android:id="@+id/nameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="Drop : Person Name"
                    android:padding="12dp" />

                <!-- PHONE -->
                <EditText
                    android:id="@+id/phoneEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="Drop : Person Mobile Number"
                    android:inputType="phone"
                    android:padding="12dp" />

                <!-- SAVE AS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Save as (optional):"
                    android:textColor="#444444" />

                <!-- TYPE -->
                <RadioGroup
                    android:id="@+id/typeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/homeRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home" />

                    <RadioButton
                        android:id="@+id/shopRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Shop" />

                    <RadioButton
                        android:id="@+id/otherRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="Other" />
                </RadioGroup>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- FIXED BOTTOM BUTTON -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/color_primary"
        android:text="Confirm and Proceed"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
