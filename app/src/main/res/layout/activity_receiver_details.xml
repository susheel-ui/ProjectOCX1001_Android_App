<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- Back -->
    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- DRAGGABLE MAP -->
    <fragment
        android:id="@+id/miniMapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BackButton"/>

    <!-- CENTER PIN -->
    <ImageView
        android:id="@+id/centerPin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_location_on_green"
        app:layout_constraintTop_toTopOf="@id/miniMapFragment"
        app:layout_constraintBottom_toBottomOf="@id/miniMapFragment"
        app:layout_constraintStart_toStartOf="@id/miniMapFragment"
        app:layout_constraintEnd_toEndOf="@id/miniMapFragment"/>

    <!-- Bottom Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/addressCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/miniMapFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Short Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_on_red" />

                <TextView
                    android:id="@+id/addressShort"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loading..."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Full Address -->
            <TextView
                android:id="@+id/addressLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fetching address..."
                android:textColor="#666"
                android:textSize="14sp"
                android:layout_marginTop="6dp"/>

            <!-- House -->
            <EditText
                android:id="@+id/houseEdit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/white"
                android:hint="House / Apartment / Shop"
                android:padding="12dp"/>

            <!-- Name -->
            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:hint="Receiver's Name"
                android:padding="12dp"/>

            <!-- Phone -->
            <EditText
                android:id="@+id/phoneEdit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:hint="Receiver's Mobile Number"
                android:inputType="phone"
                android:padding="12dp"/>

            <!-- Type -->
            <RadioGroup
                android:id="@+id/typeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <RadioButton
                    android:id="@+id/homeRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"/>

                <RadioButton
                    android:id="@+id/shopRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Shop"/>

                <RadioButton
                    android:id="@+id/otherRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Other"/>
            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Confirm and Proceed"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#F7C640"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
