<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <!-- HEADER BAR -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/baseline_arrow_back_ios_24"/>

        <TextView
            android:id="@+id/screenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Vehicle"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- PICKUP / DROP CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/locationCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- PICKUP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_location_on_green"/>

                <TextView
                    android:id="@+id/pickupText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Address"
                    android:layout_marginStart="8dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#E0E0E0"/>

            <!-- DROP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_location_on_red"/>

                <TextView
                    android:id="@+id/dropText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop Address"
                    android:layout_marginStart="8dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- DISTANCE -->
            <TextView
                android:id="@+id/distanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: 0 km"
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: --"
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_marginTop="4dp"/>


            <!-- EDIT BUTTON -->
            <Button
                android:id="@+id/editLocationBtn"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#EAF3FF"
                android:text="Edit Locations"
                android:textColor="#0059FF"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SCROLL VEHICLE LIST -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/locationCard"
        app:layout_constraintBottom_toTopOf="@id/proceedBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/vehicleContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 1️⃣ BIKE -->
            <androidx.cardview.widget.CardView
                android:id="@+id/vehicleBike"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/mini_3w"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bike (2-Wheeler)"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <!-- ⭐ UPDATED WEIGHT -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Kg Capacity"
                            android:textSize="13sp"
                            android:textColor="#6A6A6A"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/bikeFareText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 2️⃣ LOADER -->
            <androidx.cardview.widget.CardView
                android:id="@+id/vehicleLoader"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/loader"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loader (3-Wheeler)"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <!-- ⭐ UPDATED WEIGHT -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50 Kg Capacity"
                            android:textSize="13sp"
                            android:textColor="#6A6A6A"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/loaderFareText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 3️⃣ TRUCK -->
            <androidx.cardview.widget.CardView
                android:id="@+id/vehicleTruck"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/truck"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Truck (4-Wheeler)"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <!-- ⭐ UPDATED WEIGHT -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1700 Kg Capacity"
                            android:textSize="13sp"
                            android:textColor="#6A6A6A"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/truckFareText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- PROCEED BUTTON -->
    <Button
        android:id="@+id/proceedBtn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Proceed with Bike"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#F4C430"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
