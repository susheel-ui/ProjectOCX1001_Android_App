<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <!-- ================= TOP HEADER ================= -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Review Booking"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111"/>

        <!-- Spacer for centering -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <!-- ================= SCROLLABLE CONTENT ================= -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Vehicle Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/white_card"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/vehicleImage"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/zarkitgroup"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/vehicleName"
                        android:text="Scooter"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="#111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/addressDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Address Details"
                        android:textColor="#2E64FE"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>
            </LinearLayout>

            <!-- GOODS TYPE CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/white_card"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="Goods Type"
                        android:textSize="14sp"
                        android:textColor="#777"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/goodsType"
                        android:text="General • Loose"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnChange"
                    android:text="Change"
                    android:textColor="#2E64FE"
                    android:textSize="15sp"
                    android:padding="6dp"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- WARNING -->
            <LinearLayout
                android:id="@+id/restrictedItemsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/yellow_card"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:text="Do not send restricted items"
                    android:textSize="15sp"
                    android:textColor="#111"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/btnViewList"
                    android:text="View List"
                    android:textColor="#2E64FE"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- FINAL FARE -->
            <TextView
                android:id="@+id/finalFareText"
                android:text="₹0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:padding="18dp"
                android:background="@drawable/white_card"
                android:elevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- RULES -->
            <TextView
                android:text="Read Before Booking"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/rulesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_card"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rule1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/rule2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/rule3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/rule4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/rule5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/rule6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/rule7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#555"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ================= BOTTOM SECTION ================= -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- GST BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0039A6"
            android:padding="14dp">

            <TextView
                android:text="18% GST included in final fare"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- PAYMENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_card"
            android:elevation="4dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:text="Choose Payment Method"
                android:textSize="16sp"
                android:textColor="#111"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/paymentMethod"
                android:text="Cash"
                android:textSize="16sp"
                android:textColor="#111"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/paymentFare"
                android:text="₹99"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/bookNowButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColor="@color/black"
            android:text="Confirm and Proceed"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@color/color_primary"
            android:elevation="6dp"
            android:layout_margin="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
