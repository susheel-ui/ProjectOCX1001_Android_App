<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_light"
    >

    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_bottom_rounded_40dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/userCard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="50dp"
        app:strokeColor="@color/primary_variant"
        android:backgroundTint="@color/primary_variant300"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logoText" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user"
            android:layout_margin="12dp"
            />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        android:text="Zarkit"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivering happiness fast"
        android:textColor="#CCFFFFFF"
        app:layout_constraintStart_toStartOf="@id/logoText"
        app:layout_constraintTop_toBottomOf="@id/logoText" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/locationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="20dp"
        app:strokeWidth="0dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintBottom_toBottomOf="@id/headerBackground">

        <LinearLayout
            android:id="@+id/pickup_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:background="@drawable/rounded_orange_tint"
                android:src="@drawable/mappin"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PICK UP FROM"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33, Azadpur, Delhi, India"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnChangeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANGE"
                android:backgroundTint="@color/Orrange_400"
                android:textColor="@color/primary"
                android:textSize="12sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationCard"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Select Vehicle"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--            <GridLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:columnCount="2"-->
            <!--                android:alignmentMode="alignMargins">-->

            <!--                <com.google.android.material.card.MaterialCardView-->
            <!--                    android:layout_width="0dp"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_columnWeight="1"-->
            <!--                    android:layout_margin="4dp"-->
            <!--                    app:cardCornerRadius="16dp"-->
            <!--                    app:strokeWidth="1dp"-->
            <!--                    app:strokeColor="#F3F4F6">-->
            <!--                    <LinearLayout-->
            <!--                        android:layout_width="wrap_content"-->
            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:orientation="vertical"-->
            <!--                        android:padding="12dp">-->
            <!--                        <ImageView-->
            <!--                            android:layout_width="200dp"-->
            <!--                            android:layout_height="100dp"-->
            <!--                            android:background="#F9FAFB"-->
            <!--                            android:scaleType="centerInside"-->
            <!--                            android:src="@drawable/ic_3wheeler" />-->
            <!--                        <TextView-->
            <!--                            android:layout_width="wrap_content"-->
            <!--                            android:layout_height="wrap_content"-->
            <!--                            android:text="3 Wheeler"-->
            <!--                            android:textStyle="bold"/>-->
            <!--                        <TextView-->
            <!--                            android:layout_width="wrap_content"-->
            <!--                            android:layout_height="wrap_content"-->
            <!--                            android:text="Up to 500kg"-->
            <!--                            android:textSize="10sp"/>-->
            <!--                    </LinearLayout>-->
            <!--                </com.google.android.material.card.MaterialCardView>-->

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="true">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/threeWheelerCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primary"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <!--                        <ImageView-->
                        <!--                            android:layout_width="18dp"-->
                        <!--                            android:layout_height="18dp"-->
                        <!--                            android:src="@drawable/"-->
                        <!--                            android:layout_alignParentEnd="true"-->
                        <!--                            app:tint="#BDBDBD"/>-->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/Orrange_400"
                            app:strokeWidth="0dp"

                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/twoWheelertext"
                                android:layout_alignParentBottom="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_three_wheeler"
                                />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/threeWheelertext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="3 Wheeler"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="upto 500kg"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/twoWheelerCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <!--                        <ImageView-->
                        <!--                            android:layout_width="18dp"-->
                        <!--                            android:layout_height="18dp"-->
                        <!--                            android:src="@drawable/"-->
                        <!--                            android:layout_alignParentEnd="true"-->
                        <!--                            app:tint="#BDBDBD"/>-->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/Orrange_400"
                            app:strokeWidth="0dp"

                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/twoWheelertext"
                                android:layout_alignParentBottom="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/flat_illustration_two_wheeler"
                                />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/twoWheelertext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="2 Wheeler"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="upto 20kg"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/trucksCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primary"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <!--                        <ImageView-->
                        <!--                            android:layout_width="18dp"-->
                        <!--                            android:layout_height="18dp"-->
                        <!--                            android:src="@drawable/"-->
                        <!--                            android:layout_alignParentEnd="true"-->
                        <!--                            app:tint="#BDBDBD"/>-->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/Orrange_400"
                            app:strokeWidth="0dp"

                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/twoWheelertext"
                                android:layout_alignParentBottom="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/flat_icon_for_trucks"
                                />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/trucksText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="3 Wheeler"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="upto 2.5 Tons"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/bulkOrderCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primary"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <!--                        <ImageView-->
                        <!--                            android:layout_width="18dp"-->
                        <!--                            android:layout_height="18dp"-->
                        <!--                            android:src="@drawable/"-->
                        <!--                            android:layout_alignParentEnd="true"-->
                        <!--                            app:tint="#BDBDBD"/>-->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/Orrange_400"
                            app:strokeWidth="0dp"

                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/twoWheelertext"
                                android:layout_alignParentBottom="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/flat_illustration_moover_and_packers"
                                />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/bulkOrderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Bulk Order"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Custom Fleet"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!--            </GridLayout>-->

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Bulk Offer"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Save up to 30% on corporate bookings."
                        android:textColor="#E6FFFFFF" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/white"
                        android:text="Explore Now"
                        android:textColor="@color/primary"
                        app:cornerRadius="20dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>