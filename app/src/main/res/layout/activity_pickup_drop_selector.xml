<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ðŸ”™ BACK BUTTON -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:elevation="10dp"
        app:tint="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>




    <!-- ðŸ” SEARCH CONTAINER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- ICON + LINE COLUMN -->
            <LinearLayout
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- PICKUP ICON -->
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_location_on_green"/>

                <!-- CONNECTING LINE -->
                <View
                    android:layout_width="3dp"
                    android:layout_height="26dp"
                    android:layout_marginVertical="6dp"
                    android:background="#111" />

                <!-- DROP ICON -->
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_location_on_red"/>
            </LinearLayout>

            <!-- TEXT COLUMN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- PICKUP -->
                <EditText
                    android:id="@+id/pickupEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Pickup location"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <!-- DROP -->
                <EditText
                    android:id="@+id/dropEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Drop location"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!-- ðŸ—º MAP -->

    <!-- ðŸ“ PICKUP PIN -->

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pickupPin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_location_on_green"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mapFragment"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintStart_toStartOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment"/>

    <!-- ðŸ“ DROP PIN -->
    <ImageView
        android:id="@+id/dropPin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_location_on_red"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mapFragment"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintStart_toStartOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment"
        />

    <!-- NEXT BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="Confirm Locations"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:backgroundTint="@color/color_primary"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#40FFFFFF" />


</androidx.constraintlayout.widget.ConstraintLayout>
