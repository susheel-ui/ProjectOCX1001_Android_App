<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ðŸ”™ BACK BUTTON -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:padding="8dp"
        app:tint="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <!-- ðŸ” SEARCH CONTAINER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- PICKUP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location_on_green"/>

                <EditText
                    android:id="@+id/pickupEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Pickup location"
                    android:background="@null"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:focusable="false"/>
            </LinearLayout>

            <!-- DIVIDER -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp"/>

            <!-- DROP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location_on_red"/>

                <EditText
                    android:id="@+id/dropEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Drop location"
                    android:background="@null"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:focusable="false"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ—º MAP -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchContainer"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ“ PICKUP PIN -->
    <ImageView
        android:id="@+id/pickupPin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_location_on_green"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mapFragment"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintStart_toStartOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment"/>

    <!-- ðŸ“ DROP PIN -->
    <ImageView
        android:id="@+id/dropPin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_location_on_red"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mapFragment"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintStart_toStartOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment"/>

    <!-- NEXT BUTTON -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Confirm Locations"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/color_primary"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
