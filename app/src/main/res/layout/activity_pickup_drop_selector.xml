<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Pickup and Drop"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ⭐ Pickup field -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPickup"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <EditText
            android:id="@+id/pickupEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:hint="Pickup Address"
            android:textSize="16sp"
            android:focusable="false"
            android:background="@android:color/white"/>
    </androidx.cardview.widget.CardView>

    <!-- ⭐ Drop field -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDrop"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardPickup">

        <EditText
            android:id="@+id/dropEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:hint="Drop Address"
            android:textSize="16sp"
            android:focusable="false"
            android:background="@android:color/white"/>
    </androidx.cardview.widget.CardView>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardDrop"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ⭐ Pickup Pin -->
    <ImageView
        android:id="@+id/pickupPin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_location_on_green"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mapFragment"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintStart_toStartOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment"/>

    <!-- ⭐ Drop Pin -->
    <ImageView
        android:id="@+id/dropPin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_location_on_red"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mapFragment"
        app:layout_constraintBottom_toBottomOf="@id/mapFragment"
        app:layout_constraintStart_toStartOf="@id/mapFragment"
        app:layout_constraintEnd_toEndOf="@id/mapFragment"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Next"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
